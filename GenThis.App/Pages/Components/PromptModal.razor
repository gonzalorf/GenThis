@if (show)
{
    <div class="modal fade show d-block" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                </div>
                <div class="modal-body">        
                    <div class="mb-3">
                        <label class="form-label">@Body</label>
                        <input type="text" class="form-control" @bind=text>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick=Hide>Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick=@(() => { OnOk.InvokeAsync(text); Hide(); })>Ok</button>
                </div>
            </div>
        </div>
    </div>
}