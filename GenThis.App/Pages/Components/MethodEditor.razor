@if (show)
{
    <div class="modal fade show d-block" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Method</h5>
                </div>
                <div class="modal-body">        
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" @bind=method.Name>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" @bind=method.Description>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Return Type Kind</label>
                        <select class="form-select" @bind=method.ReturnTypeKind>
                            <option selected value="BuiltIn">BuiltIn</option>
                            <option value="Reference">Reference</option>
                            <option value="Enumeration">Enumeration</option>
                        </select>
                    </div>
                    @if (method.ReturnTypeKind== TypeKind.Reference)
                    {
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select class="form-select" @bind=selectedReferenceTypeID>
                                @foreach (var referenceType in Project.GetClasses())
                                {
                                    <option value="@referenceType.Id">@referenceType.Name</option>
                                }
                            </select>
                        </div>
                    }
                    @if (method.ReturnTypeKind == TypeKind.Enumeration)
                    {
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select class="form-select" @bind=selectedEnumerationTypeID>
                                @foreach (var enumerationType in Project.GetEnumerations())
                                {
                                    <option value="@enumerationType.Id">@enumerationType.Name</option>
                                }
                            </select>
                        </div>
                    }
                    @if (method.ReturnTypeKind == TypeKind.BuiltIn)
                    {
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select class="form-select" @bind=method.BuiltInReturnType>
                                @foreach (var builtInType in Enum.GetValues(typeof(BuiltInType)))
                                {
                                    <option value="@builtInType.ToString()">@builtInType.ToString()</option>
                                }
                            </select>
                        </div>
                    }
                    <div class="mb-3">
                        <label class="form-label">Accessibility</label>
                        <select class="form-select" @bind=method.Accessibility>
                            <option selected value="Public">Public</option>
                            <option value="Protected">Protected</option>
                            <option value="Internal">Internal</option>
                            <option value="Private">Private</option>
                        </select>
                    </div>
                    <div class="form-check mb-3">
                      <input class="form-check-input" type="checkbox" @bind=method.IsRetunTypeList>
                      <label class="form-check-label">
                        Return Type is List
                      </label>
                    </div>
                    <div class="form-check mb-3">
                      <input class="form-check-input" type="checkbox" @bind=method.IsVirtual>
                      <label class="form-check-label">
                        Is Virtual
                      </label>
                    </div>
                    <div class="form-check mb-3">
                      <input class="form-check-input" type="checkbox" @bind=method.IsStatic>
                      <label class="form-check-label">                
                        Is Static
                      </label>                                        
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(errorMessage)) 
                { 
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
                }
                <div class="modal-footer">                    
                    <button type="button" class="btn btn-secondary" @onclick=Hide>Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick=Ok>Ok</button>
                </div>
            </div>
        </div>
    </div>
}