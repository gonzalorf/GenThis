@if (show)
{
    <div class="modal fade show d-block" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Enumeration</h5>
                </div>
                <div class="modal-body">        
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" @bind=enumeration.Name>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">UI Name</label>
                        <input type="text" class="form-control" @bind=enumeration.UIName>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">UI Name Plural</label>
                        <input type="text" class="form-control" @bind=enumeration.UINamePlural>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick=Hide>Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick=@(() => Ok())>Ok</button>
                </div>
            </div>
        </div>
    </div>
}